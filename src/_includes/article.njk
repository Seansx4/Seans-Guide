---
layout: "base.njk"
---

<section class="block">
  <div class="container">
    <header class="block__header" data-aos="fade-up">
      <h2>{{ title }}</h2>
    </header>

    <article class="feature grid grid--1x2" data-aos="zoom-in-up">
      <div class="feature__content">
        <h3 class="feature__heading">{{ subheading1 }}</h3>

        {{ paragraph1 | safe }}
      </div>
      <img
        class="feature__image image--rounded"
        src="{{ image1 }}"
        alt="{{ imageAlt1 }}"
      />
    </article>

    {% if subheading2|length %}

    <article class="feature">
      <div class="feature__content">
        <h3 class="feature__heading">{{ subheading2 }}</h3>

        {{ paragraph2 | safe }}
      </div>
     
    </article>
     {% if imageAlt2|length %}

       {# class="feature__image image--rounded" #}
       <div style="display:grid; place-items: center;">
      <img
        style="width:80%;"
        src="{{ image2 }}"
        alt="{{ imageAlt2 }}"
      />
      </div>
      {% endif %}

    {% endif %} 
    
    {% if subheading3|length %}

    <article class="feature">
      <div class="feature__content">
        <h3 class="feature__heading">{{ subheading3 }}</h3>

        {{ paragraph3 | safe }}
      </div>
      {% if imageAlt3|length %}
      <img
        class="feature__image image--rounded"
        src="{{ image3 }}"
        alt="{{ imageAlt3 }}"
      />
      {% endif %}
    </article>

    {% endif %}
    
     {% if subheading4|length %}

    <article class="feature">
      <div class="feature__content">
        <h3 class="feature__heading">{{ subheading4 }}</h3>

        {{ paragraph4 | safe }}
      </div>
    </article>

    {% endif %}
  </div>
</section>


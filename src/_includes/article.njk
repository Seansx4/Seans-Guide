<div class="containerblog">
  {% for section in sections %} {% if section.type == "Header centered" %}
  <h2 class="headerblog-centered">{{ section.content }}</h2>
  {% elif section.type == "Paragraph left" %}
  <p class="containerblog--leftright">{{ section.content }}</p>
  {% elif section.type == "Image right" %}
  <img src="{{ section.content }}" class="imageglog-right" />
  {% elif section.type == "Paragraph centered" %}
  <p class="paragraphblog-centered">{{ section.content }}</p>
  {% elif section.type == "Image left" %}
  <img src="{{ section.content }}" class="imageblog-left" />
  {% elif section.type == "Paragraph right" %}
  <p class="containerblog--rightleft">{{ section.content }}</p>

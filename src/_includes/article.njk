---
layout: "base.njk"
---

<section class="block">
  <div class="container">
    <header class="block__header" data-aos="fade-up">
      <h1 class="blog--header">{{ blogTitle }}</h1>
    </header>

    <article class="feature grid grid--1x2" data-aos="zoom-in-up">
      <div class="feature__content">
        {{ paragraph1 | safe }}
      </div>
      <div class="feature__order">
      <img
        class="feature__image image--rounded"
        src="{{ image1 }}"
        alt="{{ imageAlt1 }}"
      />
      </div>
    </article>

    {% if subheading2|length %}

    <article class="feature">
      <div class="feature__content">
        <h3 class="feature__heading">{{ subheading2 }}</h3>

        {{ paragraph2 | safe }}
      </div>
    </article>
    {% if imageAlt2|length %}
    <div class="blog__image__container">
      <img class="feature__image" src="{{ image2 }}" alt="{{ imageAlt2 }}" />
      <p>{{ caption2 }}</p>
    </div>

    {% endif %} {% endif %} {% if subheading3|length %}

    <article class="feature">
      <div class="feature__content">
        <h3 class="feature__heading">{{ subheading3 }}</h3>

        {{ paragraph3 | safe }}
      </div>
    </article>

    {% if imageAlt3|length %}

    <div class="blog__image__container">
      <img class="feature__image" src="{{ image3 }}" alt="{{ imageAlt3 }}" />
      <p>{{ caption3 }}</p>
      <p></p>
    </div>

    {% endif %} {% endif %} {% if subheading4|length %}

    <article class="feature">
      <div class="feature__content">
        <h3 class="feature__heading">{{ subheading4 }}</h3>

        {{ paragraph4 | safe }}
      </div>
    </article>

    {% if imageAlt4|length %}

    <div class="blog__image__container">
      <img class="feature__image" src="{{ image4 }}" alt="{{ imageAlt4 }}" />
      <p>{{ caption4 }}</p>
      <p></p>
    </div>

    {% endif %} {% endif %} {% if subheading5|length %}

    <article class="feature">
      <div class="feature__content">
        <h3 class="feature__heading">{{ subheading5 }}</h3>

        {{ paragraph5 | safe }}
      </div>
    </article>
    {% if imageAlt5|length %}

    <div class="blog__image__container">
      <img class="feature__image" src="{{ image5 }}" alt="{{ imageAlt5 }}" />
      <p>{{ caption5 }}</p>
      <p></p>
    </div>

    {% endif %}

    {% endif %}
  </div>
</section>

<section data-aos="fade-up" class="block container">
  <header class="block__header">
    <h3>Blog by Category</h3>
  </header>

  {% include 'blog-categories.njk' %}
</section>

<script src="js/main.js"></script>
<script src="https://unpkg.com/aos@next/dist/aos.js"></script>
<script>
  AOS.init();
</script>

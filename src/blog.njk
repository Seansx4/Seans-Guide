---
title: Blog
layout: 'base.njk'
pagination:
  data: collections.post
  size: 2
  alias: posts

---


    <section data-aos="fade-up" class="block container">
      <header class="block__header">
        <h2>Boarding Kennels</h2>
      </header>


{% for post in posts %}
    

      <article class="feature grid grid--1x2" data-aos="zoom-in-up">
        <div class="feature__content">
          <h3 class="feature__heading">{{ post.data.title }}</h3>
          <p>{{ post.data.date | postDate }}</p>
          <p>{{ post.data.description }}</p>
          <a href="{{ post.url }}">Continue Reading</a>
        </div>
         <img
          class="feature__image image--rounded"
          src="{{ post.data.image }}"
          alt="{{ post.data.imageAlt }}"
        />
        
     
    
      

      </article>    
{% endfor %}

            
            





<div class="pagination">
 <ul class="pagination_list">
  <li>{% if pagination.href.previous %}<a href="{{ pagination.href.previous }}">Prev</a>{% endif %}</li>




<li><span> {{ pagination.pageNumber + 1 }} </span></li> 
<li><span> {{ pagination.pageNumber + 2 }} </span></li>

<li>{% if pagination.href.next %}<a href="{{ pagination.href.next }}">Next</a>{% endif %}</li>
</ul>
</div>

